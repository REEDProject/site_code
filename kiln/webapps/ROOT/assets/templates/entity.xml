                      <thead>
                        <tr>
                          <th>Collection</th>
                          <th>Section</th>
                        </tr>
                      </thead>
                      <tbody class="related-content">
                        <xsl:apply-templates select="/aggregation/editorial_results/response/result/doc" mode="editorial-search-results" />
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
