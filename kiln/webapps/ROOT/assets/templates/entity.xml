      <div class="content no-hero">
        <div class="row ">
          <div class="column medium-12">
            <h1 class="entity-header">
              <xsl:call-template name="display-entity-title" />
            </h1>
          </div>
        </div>
        <div class="entity-tabs">
          <div class="tabs">
            <div class="row">
              <ul class="tabs columns" data-tabs="" id="example-tabs">
