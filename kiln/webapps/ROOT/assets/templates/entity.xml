  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/eatsml/entity-to-html.xsl" />

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <kiln:super />
      <xsl:call-template name="display-entity-primary-name" />
    </kiln:block>

