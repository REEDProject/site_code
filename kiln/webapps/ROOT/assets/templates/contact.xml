<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <kiln:super />
      <xsl:text>Contact</xsl:text>
    </kiln:block>

    <kiln:block name="content">
      <div class="content no-hero contact white-bg">
        <div class="row">
          <div class="column medium-9">
            <h1>Contact Us</h1>
            <div class="contact-us-message">
              <p>Help us develop REED Online by sending us your corrections, usability problems, and comments. We depend upon your input to make this an accurate, easy-to-use research and educational tool. Please send any feedback to REED's Director of Research and General Editor, Sally-Beth MacLean, at s.maclean@utoronto.ca. Thank you!</p>
              <hr />
            </div>
          </div>
        </div>
      </div>
    </kiln:block>
  </kiln:child>

</kiln:root>
