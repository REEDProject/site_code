                              <path d="M9.41666667,0.25 L9.41666667,10.75" id="Path-2" stroke="#008281" stroke-width="1.25"></path>
                            </g>
                            <style>
                              #Path-2 {
                              stroke: "#008281";
                              }
                              .unavailable #Path-2, .unavailable #Shape-Copy-5 {
                              stroke: #E5E7E9;
                              fill: #E5E7EA;
                              }
                            </style>
                          </svg>
                        </a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="hide-for-medium">
                    <div class="record-sidebar hide-for-medium" >
                      <div class="bibliography-filter filter hide-for-medium boxed alternate-style hide-for-medium clear full-width">
                        <div class="filter-head jump-to-filter">TOOLS</div>
                        <div class="filter-content-wrapper relative">
                          <div class="filter-content">
                            <div class="tools">
                              <div class="tools-heading show-for-medium">TOOLS</div>
                              <ul class="tools">
                                <li class="email"><a href="">Email</a></li>
                                <li class="print"><a href="">Print</a></li>
                                <li class="pdf"><a href="">PDF</a></li>
                                <li class="xml"><a href="">XML</a></li>
                                <li class="bookmark"><a href="">Bookmark</a></li>
                                <li class="share"><a href="">Share</a></li>
                              </ul>
                            </div>

                          </div>
                        </div>
                      </div>
                      <div class="bibliography-filter filter hide-for-medium boxed alternate-style hide-for-medium clear full-width">
                        <div class="filter-head jump-to-filter">HELPFUL LINKS</div>
                        <div class="filter-content-wrapper relative">
                          <div class="filter-content">
                            <xsl:copy-of select="$helpful_links" />
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="column medium-2 show-for-medium">
                  <div class="tools">
                    <div class="tools-heading show-for-medium">TOOLS</div>
                    <ul class="tools">
                      <li class="email"><a href="">Email</a></li>
                      <li class="print"><a href="">Print</a></li>
                      <li class="pdf"><a href="">PDF</a></li>
                      <li class="xml"><a href="">XML</a></li>
                      <li class="bookmark"><a href="">Bookmark</a></li>
                      <li class="share"><a href="">Share</a></li>
                    </ul>
                  </div>
                  <xsl:copy-of select="$helpful_links" />
                </div>
              </div>
            </div>
            <div class="tabs-panel" id="panel3">
              <xsl:for-each select="$record_text/tei:front/tei:div[@type='background']">
                <div class="bibliography-filter filter hide-for-medium boxed">
                  <div class="filter-head jump-to-filter">Topics In This Section</div>
                  <div class="filter-content-wrapper relative">
                    <div class="filter-content">
                      <div class="toc mobile-toc">
                        <div>
                          <xsl:call-template name="display-section-toc" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Historical Background</h2>
                    </div>
                    <div class="related-content row">
                      <div class="columns medium-9">
                        <div class="show-for-medium">
                          <div class="row toc">
                            <div class="column medium-6">
                              <xsl:call-template name="display-section-toc" />
                            </div>
                          </div>
                        </div>
                        <div class="explore-text">
                          <xsl:apply-templates select="." />
                          <xsl:call-template name="display-section-data" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
            <div class="tabs-panel" id="panel4">
              <xsl:for-each select="$record_text/tei:front/tei:div[@type='traditions']">
                <div class="bibliography-filter filter hide-for-medium boxed">
                  <div class="filter-head jump-to-filter">Topics In This Section</div>
                  <div class="filter-content-wrapper relative">
                    <div class="filter-content">
                      <div class="toc mobile-toc">
                        <div>
                          <xsl:call-template name="display-section-toc" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Performance Traditions</h2>
                    </div>
                    <div class="related-content row">
                      <div class="columns medium-9">
                        <div class="show-for-medium">
                          <div class="row toc">
                            <div class="column medium-6">
                              <xsl:call-template name="display-section-toc" />
                            </div>
                          </div>
                        </div>
                        <div class="explore-text">
                          <xsl:apply-templates select="." />
                          <xsl:call-template name="display-section-data" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
            <div class="tabs-panel" id="panel5">
              <xsl:for-each select="$record_text/tei:back">
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Appendices</h2>
                    </div>
                    <div class="related-content">
                      <xsl:call-template name="display-appendix-toc" />
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
          </div>
        </div>
        <div class="row white-bg hide-for-medium">
          <div class="columns">
            <a href="" class="button transparent expanded back-to-top small-margin-bottom-25">Back To Top</a>
          </div>
        </div>
      </div>
    </kiln:block>

  </kiln:child>

</kiln:root>
