<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Imports stylesheet to convert Solr results into HTML. -->
  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/solr/results-to-html.xsl" />

  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/tei/record-to-html.xsl" />

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <kiln:super />
      <xsl:text>Collection: </xsl:text>
      <xsl:call-template name="display-collection-name" />
    </kiln:block>

    <kiln:block name="content">
      <div class="content no-hero">
        <div class="row">
          <div class="column medium-12">
            <h1 class="entity-header">
              <xsl:call-template name="display-collection-name" />
            </h1>
          </div>
          <div class="column medium-12">
            <div class="row collapse map-wrapper map small-margin-bottom-25">
              <div class="columns medium-9">
                <!-- QAZ: map -->
              </div>
              <div class="columns medium-3 map-legend">
                <div class="legend">Legend</div>
              </div>
            </div>
          </div>
        </div>
        <div class="entity-tabs">
          <div class="tabs">
            <div class="row">
              <ul class="tabs column" data-tabs="" id="example-tabs">
                <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Records</a></li>
                <li class="tabs-title"><a href="#panel2">Editors &amp; Acknowledgments</a></li>
                <li class="tabs-title"><a href="#panel3">Historical Background</a></li>
                <li class="tabs-title"><a href="#panel4">Performance Traditions</a></li>
                <li class="tabs-title"><a href="#panel5">Appendices</a></li>
              </ul>
            </div>
          </div>
          <div class="tabs-content" data-tabs-content="example-tabs">
            <div class="tabs-panel is-active" id="panel1">
              <div class="row">
                <div class="column medium-9">
                  <h2>Related Records</h2>
                  <table id="table" class="display responsive" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th class="top-checkbox">
                          <label class="checkbox"><input type="checkbox" name="select_all" id="table-select-all" value="1" /><span class="checkbox-inner"></span></label>
                          <a href="#" id="checkbox-toggle">T</a>
                          <ul id="checkbox-options">
                            <li data-option="all" class="hide">All</li>
                            <li data-option="none" class="hide">None</li>
                          </ul>
                        </th>
                        <th class="show-for-small-only hide-sortable" width="40px">Records</th>
                        <th class="show-for-medium">Date</th>
                        <th class="show-for-medium">Location</th>
                        <th class="show-for-medium">Record Title</th>
                        <th class="show-for-medium">Shelfmark</th>
                      </tr>
                    </thead>
                    <tbody>
                      <xsl:apply-templates select="/aggregation/response/result/doc"
                                           mode="search-results" />
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="tabs-panel" id="panel2">
              <xsl:for-each select="$record_text/tei:front/tei:div[@type='acknowledgments']">
                <div class="bibliography-filter filter hide-for-medium boxed">
                  <div class="filter-head jump-to-filter">Topics In This Section</div>
                  <div class="filter-content-wrapper relative">
                    <div class="filter-content">
                      <div class="toc mobile-toc">
                        <div>
                          <xsl:call-template name="display-section-toc" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Editors &amp; Acknowledgments</h2>
                    </div>
                    <div class="related-content row">
                      <div class="columns medium-9">
                        <div class="show-for-medium">
                          <div class="row toc">
                            <div class="column medium-6">
                              <xsl:call-template name="display-section-toc" />
                            </div>
                          </div>
                        </div>
                        <div class="explore-text">
                          <xsl:apply-templates select="." />
                          <xsl:call-template name="display-section-data" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
            <div class="tabs-panel" id="panel3">
              <xsl:for-each select="$record_text/tei:front/tei:div[@type='background']">
                <div class="bibliography-filter filter hide-for-medium boxed">
                  <div class="filter-head jump-to-filter">Topics In This Section</div>
                  <div class="filter-content-wrapper relative">
                    <div class="filter-content">
                      <div class="toc mobile-toc">
                        <div>
                          <xsl:call-template name="display-section-toc" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Historical Background</h2>
                    </div>
                    <div class="related-content row">
                      <div class="columns medium-9">
                        <div class="show-for-medium">
                          <div class="row toc">
                            <div class="column medium-6">
                              <xsl:call-template name="display-section-toc" />
                            </div>
                          </div>
                        </div>
                        <div class="explore-text">
                          <xsl:apply-templates select="." />
                          <xsl:call-template name="display-section-data" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
            <div class="tabs-panel" id="panel4">
              <xsl:for-each select="$record_text/tei:front/tei:div[@type='traditions']">
                <div class="bibliography-filter filter hide-for-medium boxed">
                  <div class="filter-head jump-to-filter">Topics In This Section</div>
                  <div class="filter-content-wrapper relative">
                    <div class="filter-content">
                      <div class="toc mobile-toc">
                        <div>
                          <xsl:call-template name="display-section-toc" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Performance Traditions</h2>
                    </div>
                    <div class="related-content row">
                      <div class="columns medium-9">
                        <div class="show-for-medium">
                          <div class="row toc">
                            <div class="column medium-6">
                              <xsl:call-template name="display-section-toc" />
                            </div>
                          </div>
                        </div>
                        <div class="explore-text">
                          <xsl:apply-templates select="." />
                          <xsl:call-template name="display-section-data" />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
            <div class="tabs-panel" id="panel5">
              <xsl:for-each select="$record_text/tei:back">
                <div class="row">
                  <div class="column medium-12">
                    <div class="entity-top-content">
                      <h2>Appendices</h2>
                    </div>
                    <div class="related-content">
                      <xsl:call-template name="display-appendix-toc" />
                    </div>
                  </div>
                </div>
              </xsl:for-each>
            </div>
          </div>
        </div>
        <div class="row white-bg hide-for-medium">
          <div class="columns">
            <a href="" class="button transparent expanded back-to-top small-margin-bottom-25">Back To Top</a>
          </div>
        </div>
      </div>
    </kiln:block>

  </kiln:child>

</kiln:root>
